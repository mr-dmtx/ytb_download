<App@FloatLayout>:
    MDLabel:
        text: "YTB DOWNLOAD"
        halign: "center"
        pos_hint:{"center_y": .9}
        font_style: "H3"
        adaptive_height: True

    MDTextField:
        id: urlYoutube
        icon_right: "youtube"
        hint_text: "Link do vídeo ou playlist"
        mode: "fill"
        pos_hint: {"center_x": .5, "center_y": .7}
        spacing: "20dp"
        adaptive_height: True
        size_hint_x: .8

    MDCheckbox:
        id: audio
        size_hint: None, None
        size: "48dp", "48dp"
        group: 'group'
        pos_hint: {"center_x": .45, "center_y": .6}
        active: True
        color_inactive: "orange"
    MDLabel:
        text: "Audio"
        halign: "center"
        pos_hint: {"center_y": .6}

    MDCheckbox:
        id: video
        size_hint: None, None
        size: "48dp", "48dp"
        group: 'group'
        pos_hint: {"center_x": .45, "center_y": .53}
        color_inactive: "orange"
    MDLabel:
        text: "Vídeo"
        halign: "center"
        pos_hint: { "center_y": .53}

    MDRectangleFlatIconButton:
        icon: "folder"
        text: "Escolher pasta"
        pos_hint: {"center_x": .5, "center_y": .4}
        size_hint_x: .8
        on_release: app.file_manager_open()

    MDRectangleFlatIconButton:
        id: btnDownload
        icon: "download"
        text: "Salvar"
        pos_hint: {"center_x": .5, "center_y": .3}
        size_hint_x: .8
        on_release: app.Download()

    MDSpinner:
        id: spinner
        size_hint: None, None
        size: dp(46), dp(46)
        pos_hint: {'center_x': .5, 'center_y': .2}
        active: False


App:
